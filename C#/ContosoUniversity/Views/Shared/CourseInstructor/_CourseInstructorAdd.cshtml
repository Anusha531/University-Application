                <div class="modal-body">
                    <div class="form-group">
                        <div>
                            @Html.Label("Course ID", new { @class = "col-form-label" })
                            @Html.TextBoxFor(m => m.CourseID, new { @class = "courseIdTypeahead form-control ays-ignore", @type = "text", @placeholder = "Search Course Id", data_url = Url.Action("GetCourseById", "Courses") })
                            @Html.HiddenFor(m => m.CourseID)
                        </div>
                        <div>
                            @Html.Label("InstructorID", new { @class = "col-form-label" })
                            @Html.DropDownListFor(m => m.InstructorID, ViewBag.Instructors as IEnumerable<SelectListItem>, "Select Instructor", new { @class = "form-control ays-ignore" })
                        </div>
                    </div>
